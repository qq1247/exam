<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration status="error" monitorInterval="6">
	<appenders>
		<Console name="console" target="SYSTEM_OUT">
			<ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY" />
			<PatternLayout pattern="%m {%d{yyyy-MM-dd HH:mm:ss,SSS} %F.%M()%L行}%n" />
		</Console>
		<RollingFile name="rollingFile" fileName="c:/bak/log/exam/exam.log" filePattern="c:/bak/log/exam/exam-%d{yyyy-MM-dd}.log">
			<PatternLayout pattern="%m {%d{yyyy-MM-dd HH:mm:ss,SSS} %F.%M()%L行}%n" />
			<TimeBasedTriggeringPolicy modulate="true" interval="1" />
			<DefaultRolloverStrategy max="31" />
		</RollingFile>
	</appenders>
	<loggers>
		<!-- 打印进度条 -->
		<Logger name="com.wcpdoc.exam.base.cache.ProgressBarCache" level="info"></Logger>
		<!-- 打印令牌登陆、过期、刷新等日志 -->
		<Logger name="com.wcpdoc.exam.base.service.impl.LoginServiceImpl" level="info"></Logger>
		<Logger name="com.wcpdoc.exam.auth.filter.JWTFilter" level="info"></Logger>
		<root level="info">
			<appender-ref ref="rollingFile" />
			<appender-ref ref="console" />
		</root>
	</loggers>
</configuration>